# Application
APP_NAME=UnserTurnierplan
APP_VERSION=1.0.0
APP_ENV=development
DEBUG=True
API_PREFIX=/api/v1

# Server
HOST=0.0.0.0
PORT=8000
WORKERS=4

# Security
SECRET_KEY=your-secret-key-change-this-in-production
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7

# Database
DATABASE_URL=postgresql+asyncpg://postgres:postgres@db:5432/unserturnierplan
DATABASE_POOL_SIZE=20
DATABASE_MAX_OVERFLOW=0

# Redis
REDIS_URL=redis://redis:6379/0
REDIS_CACHE_TTL=3600

# CORS
CORS_ORIGINS=["http://localhost:3000","http://localhost:8000"]

# Email (Optional - für später)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=
SMTP_PASSWORD=
EMAILS_FROM_EMAIL=noreply@unserturnierplan.de
EMAILS_FROM_NAME=UnserTurnierplan

# File Upload
MAX_UPLOAD_SIZE=10485760
UPLOAD_DIR=uploads

# Sentry (Optional)
SENTRY_DSN=

# Logging
LOG_LEVEL=INFO
